<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Maui.BidTrainer.ViewModels"
             xmlns:bidTrainer="clr-namespace:Maui.BidTrainer"
             x:Class="Maui.BidTrainer.Views.HandView">
    <ContentView.BindingContext>
        <viewModels:HandViewModel/>
    </ContentView.BindingContext>
    <ContentView.Content>
        <StackLayout WidthRequest="250" HeightRequest="150">
            <CollectionView ItemsSource="{Binding Cards}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="bidTrainer:Card">
                        <StackLayout>
                            <Image Source="{Binding Source}" 
                                   Aspect="Center" 
                                   WidthRequest="{Binding Width}"
                                   HeightRequest="{Binding Height}"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentView.Content>
</ContentView>